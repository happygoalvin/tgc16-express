{{#extends 'base'}}

{{#block 'title'}}
Delete Movie
{{/block}}

{{#block 'content'}}
<form method="post">
    <div class="alert alert-danger">
        Are you sure you want to delete the movie
        with the title: {{sighting.title}}
    </div>

    <input type="submit" class="btn btn-danger" value="Confirm delete"/>
    <a href="/" class="btn btn-primary">Cancel delete</a>
</form>
{{/block}}

{{/extends}}